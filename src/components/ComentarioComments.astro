---
import { slugifyStr } from "@utils/slugify";

export interface Props {
  title: string;
}
const COMENTARIO_CSS_OVERRIDE =
  "https://comentario--yamendev.netlify.app/comentario-styles.css";
const { title } = Astro.props;
---

<comentario-comments
  css-override={COMENTARIO_CSS_OVERRIDE}
  page-id={`/posts/${slugifyStr(title)}`}></comentario-comments>
